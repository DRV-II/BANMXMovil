<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PerfilActivity">

        <ImageButton
            android:id="@+id/regresarBotonPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFFFFF"
            android:minHeight="48dp"
            android:onClick="regresarAMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <ImageView
            android:id="@+id/apadrinarPerfil"
            android:layout_width="55dp"
            android:layout_height="58dp"
            android:onClick="iraApadrinar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.646"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.979"
            app:srcCompat="@drawable/familiaicono"
            app:tint="#0E0E0E" />

        <ImageView
            android:id="@+id/cartPerfil"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.364"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.977"
            app:srcCompat="@drawable/carrito3" />

        <ImageView
            android:id="@+id/homePerfil"
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:onClick="irAInicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.977"
            app:srcCompat="@drawable/casa"
            app:tint="#151414" />

        <ImageView
            android:id="@+id/configPerfil"
            android:layout_width="127dp"
            android:layout_height="77dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.99"
            app:srcCompat="@drawable/settingsgrey"
            tools:srcCompat="@drawable/herramienta2"
            app:tint="#BF2121" />

        <Button
            android:id="@+id/misSuscripcionesBotonPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:backgroundTint="#D51E1E"
            android:text="Mis suscripciones"
            app:layout_constraintEnd_toEndOf="@+id/misTarjetasBotonPerfil"
            app:layout_constraintStart_toStartOf="@+id/misTarjetasBotonPerfil"
            app:layout_constraintTop_toBottomOf="@+id/misDonacionesBotonPerfil"
            app:strokeColor="#171111" />

        <ImageView
            android:id="@+id/imagenPerfilPerfil"
            android:layout_width="124dp"
            android:layout_height="0dp"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="49dp"
            app:layout_constraintBottom_toTopOf="@+id/correoViewPerfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.114"
            app:srcCompat="@drawable/img_24787" />

        <TextView
            android:id="@+id/nombreViewPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nombre"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenPerfilPerfil"
            app:layout_constraintVertical_bias="0.006" />

        <Button
            android:id="@+id/editarPerfilBotonPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:backgroundTint="#D51E1E"
            android:onClick="cambiarAEditarPerfil"
            android:text="Editar perfil"
            app:iconTint="#D51E1E"
            app:layout_constraintEnd_toEndOf="@+id/correoViewPerfil"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/correoViewPerfil"
            app:layout_constraintTop_toBottomOf="@+id/nombreViewPerfil" />

        <TextView
            android:id="@+id/correoViewPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="466dp"
            android:text="Email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/nombreViewPerfil"
            app:layout_constraintTop_toBottomOf="@+id/imagenPerfilPerfil" />

        <Button
            android:id="@+id/misDonacionesBotonPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:backgroundTint="#D51E1E"
            android:onClick="irAOrdenes"
            android:text="Mis donaciones"
            app:layout_constraintEnd_toEndOf="@+id/editarPerfilBotonPerfil"
            app:layout_constraintStart_toStartOf="@+id/editarPerfilBotonPerfil"
            app:layout_constraintTop_toBottomOf="@+id/editarPerfilBotonPerfil" />

        <Button
            android:id="@+id/misTarjetasBotonPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#D51E1E"
            android:onClick="iraAddTarjeta"
            android:text="Mis tarjetas"
            app:layout_constraintEnd_toEndOf="@+id/misDonacionesBotonPerfil"
            app:layout_constraintStart_toStartOf="@+id/misDonacionesBotonPerfil"
            app:layout_constraintTop_toBottomOf="@+id/misDonacionesBotonPerfil"
            app:strokeColor="#171111" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>