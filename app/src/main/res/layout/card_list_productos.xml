<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewProductos"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:text="Producto"
            android:textColor="#D31919"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/simboloPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreProducto"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/item_image"
            android:text="$"
            android:textColor="#D31919"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precioProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreProducto"
            android:layout_toEndOf="@+id/simboloPrecio"
            android:layout_toRightOf="@+id/simboloPrecio"
            android:layout_marginRight="5dp"
            android:text="Precio"
            android:textColor="#D31919"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pesoTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreProducto"
            android:layout_toEndOf="@+id/precioProducto"
            android:layout_toRightOf="@+id/precioProducto"
            android:text="MX"
            android:textColor="#D31919"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>